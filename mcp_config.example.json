{
  "mcpServers": {
    "pkm-knowledge-graph": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "/ABSOLUTE/PATH/TO/YOUR/PKM/PROJECT",
        "python",
        "mcp_server.py"
      ],
      "env": {
        "GEMINI_API_KEY": "your-gemini-api-key-here",
        "NEO4J_URI": "bolt://localhost:7687",
        "NEO4J_USER": "neo4j",
        "NEO4J_PASSWORD": "your-neo4j-password-here"
      }
    }
  }
}

